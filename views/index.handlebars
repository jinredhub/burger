<h1>Eat-Da-Burger</h1>

<div id="form">
	<textarea type="text"></textarea>
	<input type="submit" id="submit-btn">
</div>

<div id="order">
	<ul>
		{{#each burgers}}
			{{#unless this.devoured}}
			<li>
				<p>{{this.burger_name}}&nbsp&nbsp<button class="del-btn" data-id="{{this.id}}">Devour it!</button> </p>	
			</li>		
			{{/unless}}
		{{/each}}
	</ul>
</div>

<div id="devoured">
	<ul>
		{{#each burgers}}
			{{#if this.devoured}}
				<li>
					<p>{{this.burger_name}}</p>	
				</li>		
			{{/if}}
		{{/each}}
	</ul>
</div>